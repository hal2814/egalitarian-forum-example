<!DOCTYPE html>
<html>
  <head>
    <title>Demo Forum for Egalitarian Gem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>
    <div class="nav-wrapper deep-purple">
      <ul id="nav-mobile" class="deep-purple right hide-on-med-and-down">
        <li><%= link_to "posts", posts_path %></li>
        <% if current_user %>
          <li><%= current_user.name %></li>
          <li><%= link_to "Sign out", '/sign_out' %></li>
        <% else %>
          <li><%= link_to "Sign up", 'sign_up' %></li>
          <li><%= link_to "Sign in", '/sign_in' %></li>
        <% end %>
      </ul>
      <ul class="deep-purple left hide-on-med-and-down">
        <li class="brand-logo titlefont">Egalitarian</li>
      </ul>
    </div>
  </nav>
  <body>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
