<div class="section">
  <table>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><h5><%= link_to post.title, post_path(post.id) %></h5></td>
        <td><p>by <%= post.user.name %></p></td>
        <td><%= image_tag post.thumbnail %></td>
        <td>Submitted <%= time_ago_in_words(post.created_at) %></td>
        <td>
          <%= link_to like_post_path(post), method: :put do %>
            Upvote
            <%= post.get_upvotes.size %>
          <% end %>
          <%= link_to dislike_post_path(post), method: :put do %>
            Downvote
            <%= post.get_downvotes.size %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
